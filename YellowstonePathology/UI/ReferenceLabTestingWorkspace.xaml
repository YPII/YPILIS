<UserControl x:Class="YellowstonePathology.UI.ReferenceLabTestingWorkspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YellowstonePathology.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView Name="ListViewDocuments" Margin="2" Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Path=FileInfoList}">
            <ListView.View>
                <GridView AllowsColumnReorder="True" ColumnHeaderToolTip="Case List">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name" Width="400"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Length}" Header="Size" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</UserControl>
